<module>

	<!-- Inherit the core Web Toolkit stuff.                  -->
	<inherits name='com.google.gwt.user.User'/>

	<!-- Include CSS                                          -->
	<stylesheet src='Voices.css'/>

  <replace-with class="com.allen_sauer.gwt.voices.client.util.impl.DOMUtilImplOpera">
    <when-type-is class="com.allen_sauer.gwt.voices.client.util.impl.DOMUtilImpl"/>
    <when-property-is name="user.agent" value="opera"/>
  </replace-with>

  <replace-with class="com.allen_sauer.gwt.voices.client.util.impl.DOMUtilImplSafari">
    <when-type-is class="com.allen_sauer.gwt.voices.client.util.impl.DOMUtilImpl"/>
    <when-property-is name="user.agent" value="safari"/>
  </replace-with>

  <replace-with class="com.allen_sauer.gwt.voices.client.util.impl.DOMUtilImplIE6">
    <when-type-is class="com.allen_sauer.gwt.voices.client.util.impl.DOMUtilImpl"/>
    <when-property-is name="user.agent" value="ie6"/>
  </replace-with>

  <replace-with class="com.allen_sauer.gwt.voices.client.util.impl.DOMUtilImplMozilla">
    <when-type-is class="com.allen_sauer.gwt.voices.client.util.impl.DOMUtilImpl"/>
    <when-property-is name="user.agent" value="gecko1_8"/>
  </replace-with>

  <replace-with class="com.allen_sauer.gwt.voices.client.util.impl.DOMUtilImplMozillaOld">
    <when-type-is class="com.allen_sauer.gwt.voices.client.util.impl.DOMUtilImpl"/>
    <when-property-is name="user.agent" value="gecko"/>
  </replace-with>
</module>
